<Window x:Class="InventoryManagementSystem.Views.AddItemDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="新增商品" Height="500" Width="400"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize">
    
    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- 標題 -->
        <TextBlock Grid.Row="0" Text="新增商品" 
                   Style="{StaticResource MaterialDesignHeadline5TextBlock}"
                   Margin="0,0,0,20"/>

        <!-- 表單 -->
        <StackPanel Grid.Row="1">
            <TextBox x:Name="NameTextBox"
                     materialDesign:HintAssist.Hint="商品名稱"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,5"/>

            <TextBox x:Name="PriceTextBox"
                     materialDesign:HintAssist.Hint="價格"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,5"/>

            <TextBox x:Name="StockTextBox"
                     materialDesign:HintAssist.Hint="庫存數量"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,5"/>

            <TextBox x:Name="MinStockTextBox"
                     materialDesign:HintAssist.Hint="最低庫存"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     Margin="0,5"/>

            <ComboBox x:Name="CategoryComboBox"
                      materialDesign:HintAssist.Hint="商品類別"
                      Style="{StaticResource MaterialDesignFloatingHintComboBox}"
                      IsEditable="True"
                      Margin="0,5">
                <ComboBoxItem Content="食品"/>
                <ComboBoxItem Content="飲料"/>
                <ComboBoxItem Content="日用品"/>
                <ComboBoxItem Content="文具"/>
                <ComboBoxItem Content="電子產品"/>
                <ComboBoxItem Content="服飾"/>
                <ComboBoxItem Content="其他"/>
            </ComboBox>

            <TextBox x:Name="DescriptionTextBox"
                     materialDesign:HintAssist.Hint="商品描述"
                     Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                     AcceptsReturn="True"
                     TextWrapping="Wrap"
                     Height="80"
                     VerticalScrollBarVisibility="Auto"
                     Margin="0,5"/>
        </StackPanel>

        <!-- 按鈕 -->
        <StackPanel Grid.Row="2" Orientation="Horizontal" 
                    HorizontalAlignment="Right" Margin="0,20,0,0">
            <Button x:Name="CancelButton" Content="取消" 
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,10,0" Width="80"
                    Click="CancelButton_Click"/>
            <Button x:Name="SaveButton" Content="儲存" 
                    Style="{StaticResource MaterialDesignRaisedButton}"
                    Width="80"
                    Click="SaveButton_Click"/>
        </StackPanel>
    </Grid>
</Window>